<?php
class motor{
    
    var $merek;
    var $warna;
    var $ukuran;
    
    function tampilkan_merek(){
        return "honda<br/>";
        
    }

    function warna_motor(){
        return "Warna motor saya hitam<br/>";
        
    }
    
    function ukuran_motor(){
        return "Ukuran motor saya 1 meter<br/>";
    }

}

$motor = new motor();

echo $motor->tampilkan_merek();

echo $motor->warna_motor();

echo $motor->ukuran_motor();


?>
